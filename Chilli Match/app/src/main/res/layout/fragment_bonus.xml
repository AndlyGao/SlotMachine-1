<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BonusFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor1_dop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.57" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.79" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bhor6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bvert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bvert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.58" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bvert3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.675" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bvert4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.89" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bvert5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <TextView
            android:id="@+id/x2_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor1"
            app:layout_constraintBottom_toBottomOf="@+id/bhor2"
            app:layout_constraintStart_toStartOf="@+id/bvert1"
            app:layout_constraintEnd_toEndOf="@+id/bvert2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="x 2 на 1 игру - $1.0"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/buyx2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor1"
            app:layout_constraintBottom_toBottomOf="@+id/bhor2"
            app:layout_constraintStart_toStartOf="@+id/bvert3"
            app:layout_constraintEnd_toEndOf="@+id/bvert4"
            android:background="@drawable/buy_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>


        <TextView
            android:id="@+id/x3_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor2"
            app:layout_constraintBottom_toBottomOf="@+id/bhor3"
            app:layout_constraintStart_toStartOf="@+id/bvert1"
            app:layout_constraintEnd_toEndOf="@+id/bvert2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="x 3 на 1 игру - $1.5"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/buyx3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor2"
            app:layout_constraintBottom_toBottomOf="@+id/bhor3"
            app:layout_constraintStart_toStartOf="@+id/bvert3"
            app:layout_constraintEnd_toEndOf="@+id/bvert4"
            android:background="@drawable/buy_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/x5_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor3"
            app:layout_constraintBottom_toBottomOf="@+id/bhor4"
            app:layout_constraintStart_toStartOf="@+id/bvert1"
            app:layout_constraintEnd_toEndOf="@+id/bvert2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="x 5 на 1 игру - $2.5"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/buyx5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor3"
            app:layout_constraintBottom_toBottomOf="@+id/bhor4"
            app:layout_constraintStart_toStartOf="@+id/bvert3"
            app:layout_constraintEnd_toEndOf="@+id/bvert4"
            android:background="@drawable/buy_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/x7_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor4"
            app:layout_constraintBottom_toBottomOf="@+id/bhor5"
            app:layout_constraintStart_toStartOf="@+id/bvert1"
            app:layout_constraintEnd_toEndOf="@+id/bvert2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="x 7 на 1 игру - $3.5"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/buyx7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor4"
            app:layout_constraintBottom_toBottomOf="@+id/bhor5"
            app:layout_constraintStart_toStartOf="@+id/bvert3"
            app:layout_constraintEnd_toEndOf="@+id/bvert4"
            android:background="@drawable/buy_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/x10_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor5"
            app:layout_constraintBottom_toBottomOf="@+id/bhor6"
            app:layout_constraintStart_toStartOf="@+id/bvert1"
            app:layout_constraintEnd_toEndOf="@+id/bvert2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="x 10 на 1 игру - $5.0"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/buyx10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/bhor5"
            app:layout_constraintBottom_toBottomOf="@+id/bhor6"
            app:layout_constraintStart_toStartOf="@+id/bvert3"
            app:layout_constraintEnd_toEndOf="@+id/bvert4"
            android:background="@drawable/buy_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>



        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/bhor1_dop"
            app:layout_constraintStart_toStartOf="@+id/bvert4"
            app:layout_constraintEnd_toEndOf="@+id/bvert5"
            android:background="@drawable/close_button"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>